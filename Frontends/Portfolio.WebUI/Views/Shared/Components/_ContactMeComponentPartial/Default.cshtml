@model CreateContactMeDto

<section class="ftco-section contact-section ftco-no-pb" id="contact-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h1 class="big big-2">Contact</h1>
                <h2 class="mb-4">Contact Me</h2>
                @await Component.InvokeAsync("_DescriptionComponentPartial", new { id = 6 })
            </div>
        </div>

        <div class="row d-flex contact-info mb-5">
            @await Component.InvokeAsync("_ContactInfoComponentPartial")
        </div>

        <div class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form method="post" action="/ContactMe/SendContactMessage" class="bg-light p-4 p-md-5 contact-form">
                    <div class="form-group">
                        <input asp-for="Name" type="text" class="form-control" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="text" class="form-control" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <input asp-for="Subject" type="text" class="form-control" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>

            <div class="col-md-6 d-flex">
                <div class="img" style="background-image: url(/clark-master/images/about.jpg);"></div>
            </div>
        </div>
    </div>
</section>