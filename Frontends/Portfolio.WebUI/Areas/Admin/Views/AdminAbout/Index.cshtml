@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Abouts</h4>
                <p class="card-subtitle mb-4">
                    Create, Delete and Update (**Please just let one item**)
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Description</th>
                                <th>Name</th>
                                <th>Date Of Birth</th>
                                <th>Address</th>
                                <th>ZipCode</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Complete Project</th>
                                <th>Cover Image Url</th>
                                <th>Cv Url</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Description</td>
                                    <td>@item.Name</td>
                                    <td>@item.DateOfBirth</td>
                                    <td>@item.Address</td>
                                    <td>@item.ZipCode</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.CompleteProject</td>
                                    <td>@item.CoverImageUrl</td>
                                    <td>@item.CvUrl</td>
                                    <td> <a href="/Admin/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-success">Update</a></td>
                                    <td> <a href="/Admin/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-primary">Create About</a>
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->




</div>

