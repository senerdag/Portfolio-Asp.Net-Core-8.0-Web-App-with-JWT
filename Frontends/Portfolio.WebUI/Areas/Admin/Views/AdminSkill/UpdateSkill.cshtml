@model UpdateSkillDto

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Update Skill</h4>
        <p class="card-subtitle mb-4">**Fill The All Blanks**</p>

        <form method="post">
            <input type="hidden" asp-for="SkillId" />
            <div class="form-group">
                <label for="exampleInputName">Name</label>
                <input class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter Name">
            </div>
            <div class="form-group">
                <label for="exampleInputProgress">Progress</label>
                <input class="form-control" id="exampleInputProgress" asp-for="Progress" placeholder="Progress">
            </div>

            <button type="submit" class="btn btn-success waves-effect waves-light">Update Skill</button>
        </form>

    </div> <!-- end card-body-->
</div>

