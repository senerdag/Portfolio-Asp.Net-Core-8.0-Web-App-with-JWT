@model List<ResultSkillDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Skills</h4>
                <p class="card-subtitle mb-4">
                    Create, Delete and Update
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Progress</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>@item.Progress</td>
                                    <td> <a href="/Admin/AdminSkill/UpdateSkill/@item.SkillId" class="btn btn-success">Update</a></td>
                                    <td> <a href="/Admin/AdminSkill/DeleteSkill/@item.SkillId" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/AdminSkill/CreateSkill/" class="btn btn-primary">Create Skill</a>
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->




</div>

