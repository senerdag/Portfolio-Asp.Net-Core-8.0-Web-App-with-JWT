@model List<ResultBannerDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Banners</h4>
                <p class="card-subtitle mb-4">
                    Create, Delete and Update 
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Side Title</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Cover Image Url</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.SideTitle</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.CoverImageUrl</td>
                                    <td> <a href="/Admin/AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-success">Update</a></td>
                                    <td> <a href="/Admin/AdminBanner/DeleteBanner/@item.BannerId" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }
                            

                        </tbody>
                    </table>
                    <a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-primary">Create Banner</a>
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->


    

</div>
